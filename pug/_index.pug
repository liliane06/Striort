extends ./_layouts/striort.pug

block append CSS
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.css"+ version)
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick-theme.min.css"+ version)
    link(rel="stylesheet", href="css/style.css"+ version)
    

block content

    section#banners.relative
        .container-fluid.sem-padding
            .row
                .col-sm-12#banner   
                    // Banners rotativos                
                    .c-banner.background-topo2
                        .row.item-c.centralizar
                            .col-sm-5
                                .texto-banner
                                    img(src="img/borboleta.png"+ version, alt="Icone Striort", class="center-block")
                                    h1.text-verde-agua.text-uppercase.text-center  Cuide das estrias dela, <br>
                                        span.linha-meio|e ela cuida do que é <br>
                                        | realmente importante    
                    .c-banner.background-topo
                        .centralizar
                            .centralizar-interno.col-sm-12
                                h1.h1-banner.text-verde-agua Antes
                                img.icone-striort(src="img/Logo-striort.png"+ version, alt="Logo Striort")
                                h1.h1-banner.text-verde-agua Depois      


    section.bg-verde
        .container
            .row.pd-40 
                h2.text-verde-agua.text-center Melhoria de até 80% das estrias na 1° sessão
                .col-sm-12.item
                    .col-sm-6.pd-20-top
                        .row
                            .col-sm-6
                                img.img-responsive(src="img/estria-redonda.png", alt="")
                                h4.text-verde-agua.text-center Antes
                            .col-sm-6
                                img.img-responsive(src="img/estria-redonda2.png", alt="")
                                h4.text-verde-agua.text-center Depois
                    .col-sm-6.pd-20-top.linha-verde-agua
                            h3.text-verde-agua Aline Mafia Moreira
                            p.text-inverse Técnica em Estética
                            p.text-inverse Conheça
                            img(src="img/icon-insta.png", alt="")
                            img(src="img/icon-face.png", alt="")

              
                    









block append scriptsJS
    script(src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js", type="text/javascript")
    script(src="js/app.js")


