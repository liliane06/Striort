extends ./_layouts/striort.pug

block append CSS
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.css")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick-theme.min.css")
    link(rel="stylesheet", href="css/style.css")
    

block content

    section#banners.relative
        .container-fluid.sem-padding
            .row
                .col-sm-12#banner   
                    // Banners rotativos                
                    #c-banner
                        .row.item-c.background-topo.centralizar
                            .col-sm-12
                                .centralizar-interno
                                    h1.text-verde-agua Antes
                                    img(src="img/Logo-striort.png", alt="")
                                    h1.text-verde-agua Depois
                    #c-banner
                        .row.item-c.background-topo2.centralizar2
                            .col-sm-12
                                .centralizar-interno2
                                    img(src="img/borboleta.png", alt="")
                                    h1.text-verde-agua.text-uppercase  Cuide das estrias dela, <br>
                                        span.linha-meio|e ela cuida do que é <br>
                                        | realmente importante          


    section.bg-verde
        .container
            .row.pd-40 
                h2.text-verde-agua.text-center Melhoria de até 80% das estrias na 1° sessão
                .col-sm-12.item
                    .col-sm-6.pd-20-top
                        .row
                            .col-sm-6
                                img.img-responsive(src="img/estria-redonda.png", alt="")
                                h4.text-verde-agua.text-center Antes
                            .col-sm-6
                                img.img-responsive(src="img/estria-redonda2.png", alt="")
                                h4.text-verde-agua.text-center Depois
                    .col-sm-6.pd-20-top.linha-verde-agua
                            h3.text-verde-agua Aline Mafia Moreira
                            p.text-inverse Técnica em Estética
                            p.text-inverse Conheça
                            img(src="img/icon-insta.png", alt="")
                            img(src="img/icon-face.png", alt="")

    section#acoes.back-acoes
        .container
            .row
                .col-sm-10.col-sm-offset-1                    
                    h2.text-uppercase.text-verde-claro conheça mais sobre o tratamento                   
                    


    .line-gold
    section#imagem.bg-imagem-tec
        .container
            .row
                .col-sm-6.leort-image-text
                    h2.pd-20-top 
                        span.marca LEORT® 
                        | é sinônimo de <br/> 
                        | ação rápida e <br/> 
                        | resultados estéticos incríveis. <br/> 
                    h2.light.segredo #SegredosBM   

           
                .col-sm-6.hidden-xs
                    img.img-responsive(src="img/mulher.png", alt="") 

    .line-gold
    section#depoimentos.section.back-acoes
        .container
            .row
                h1.text-center.bold.pd-80-bottom.text-uppercase Depoimentos
                .col-sm-8.col-sm-offset-2.relative
                    .caixa-leort.visible-lg
                        img(src="img/leort-caixa-depoimentos.png", alt="leort")
                    .embed-responsive.embed-responsive-16by9
                        iframe.embed-responsive-item(src="https://www.youtube.com/embed/FIEXYraiGiY", frameborder="0", allowfullscreen)


    // objetos não visiveis na tela
    img(src="img/linha-dourada.png", alt="linha dourada", class="hidden", id="dourado")
    img(src="img/brilho.png", alt="linha dourada", class="hidden", id="shiny")







block append scriptsJS
    script(src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js", type="text/javascript")
    script(src="js/app.js")


