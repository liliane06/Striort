
.banners
    @extends .padding-zero

#banner-container
    overflow hidden

.list-acoes
    margin-top 40px

#c-banner
    z-index: 999;
    position: relative;
.caixa-leort
    position: absolute
    z-index 3
    margin-left: -230px

.icon-acoes
    max-width 50px
    margin-right: 10px

.bandeira
    @extends .absolute
    bottom: -30px
    left 0
    z-index 9999
.section
    padding 100px 0
.leort-desc
    box-shadow: 0px 4px 1px $shadow-color
.marca-desc
    margin-top: 10px
    margin-bottom: 30px


.text-leort
    margin-top: 130px



.line-blue
    width: 100%
    height 1px
    background-image: url(../img/linha-striort.png)
.line-small
    background-image: url(../img/linha-striort.png)
    background-position: center center
    background-size: contain
    height 2px
.line-h3
    @extends .line-small
    max-width 450px
    height 3px
.line-width
    max-width 150px;
    margin: auto
    height 2px
    background-image: url(../img/linha-striort.png)
    background-position: center center
    background-size: contain

.line-width-big
    width: 400px;
    height 2px
    background-image: url(../img/linha-striort.png)

.arrowsPlace
    width: 120px
    height 40px;
    position relative
    right 0
    float right 




.c-banner
    display: flex

.background-topo
    background-image: url(../img/striort-background-topo.jpg)
    background-size: cover
    background-position: center center

.background-topo2
    background-image: url(../img/background-gravida-striort.jpg)
    background-size: cover
    background-position: center center

.centralizar
    display: flex
    justify-content: center
    width: 100%;
    height: 100%;
    & > *
        align-self: center
    .centralizar-interno
        display: flex
        justify-content: space-around
        & > *
            align-self: center

.texto-banner-1
    font-size: 30px
    line-height: 1.2

.sem-padding
    padding: 0

.linha-meio
    font-weight: 100

.bloco-melhoria
    background-color: #3a4f46
    color: #80bfaa
    height:500px
    text-align: center

.linha-verde-agua
    border-left: 1px solid #82beab
    padding: 20px


@media screen and (max-width: $queries['large'])
    .leort-image-text
        padding-top 20px
        padding-bottom: 0
    .text-leort
        margin-top: 0px
    .bandeira
        max-width: 550px;
        bottom: 0;
        left: -70px;
    .seta-left
        left -10px
    .seta-right
        right -10px

@media screen and (max-width: $queries['medium'])
    .icone-striort
        max-width 140px
    footer
        .container
            div
                margin-top 20px


@media screen and (max-width: $queries['small'])
    .leort-desc
        margin-top 40px
    //tetste
    .item-c
        h1
        p 
            text-align: center
        p 
            font-size: 18px
            line-height: 1.2
            margin-bottom: 10px
            img
                margin: auto

        .text-banner
            img
                margin: auto
@media screen and (max-width: 390px)
    .bandeira
        bottom: -20px;     
        max-width: 420px;     
        left: -120px;
        