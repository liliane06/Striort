.encontre
    .encontre-title
        font-size 60px
        padding-top 140px
    #norte
    #nordeste
    #CentroOeste
    #sul
    #sudeste
        cursor: pointer;
        transform-origin: center center;
        transition: 1s;
        &:hover
            transform scale(1.13)

#estados
    list-style: none
    padding-left: 0
    border: 1px solid #009c80;
    cursor pointer
    li
        padding: 10px
    li:nth-child(odd)
        background-color: #009c80
        color: #fff
    li:nth-child(even)
        background-color: #00b594
        color: #fff

#cidades
    list-style: none
    padding-left: 0
    border: 1px solid #009c80;
    cursor pointer
    li
        padding: 10px
    li:nth-child(odd)
        background-color: #009c80
        color: #fff
    li:nth-child(even)
        background-color: #00b594
        color: #fff

#esteticistas
    list-style: none;
    padding: 0;
    border: 1px solid #009c80;
    border-radius: 10px;
    box-shadow: 2px 2px 3px #cccccc;
    padding: 20px;
    ul
        list-style: none;
    li
        margin-bottom: 10px;

.img-esteticista-encontre
    max-width: 150px;
    width: 150px;
    height: 150px;

.display-encontre
    display: flex

.informacoes-encontre
    text-align: left 
    margin-left: 15px
    margin-top: 0;
    a
        padding: 10px 5px


@media screen and (max-width: $queries['medium'])
    .encontre
        .encontre-title
            font-size 40px
            padding-top 40px
