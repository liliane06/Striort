.encontre
    .encontre-title
        font-size 60px
        padding-top 140px
    #norte
    #nordeste
    #CentroOeste
    #sul
    #sudeste
        cursor: pointer;
        transform-origin: center center;
        transition: 1s;
        &:hover
            transform scale(1.13)

#estados
    list-style: none
    padding-left: 0
    border: 1px solid #009c80;
    cursor pointer
    li:nth-child(odd)
        background-color: #009c80
        color: #fff

#cidades
    list-style: none
    padding-left: 0
    border: 1px solid #009c80;
    cursor pointer
    li:nth-child(odd)
        background-color: #009c80
        color: #fff

@media screen and (max-width: $queries['medium'])
    .encontre
        .encontre-title
            font-size 40px
            padding-top 40px
