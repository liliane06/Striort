header
	height: auto
	padding-top 20px
	position: fixed
	left 0
	top: 0
	width: 100%
	z-index 4
	.container
		padding-bottom: 20px
	.rede-sociais
		text-align: left
		max-width remify(130px)
	
.logo-striort
	text-align: left 

.logo-container
	padding: 15px 0

.center-vertical
	@extends .flex-center-vertical

footer
	@extend .text-inverse
	p 
		@extend .light


.rede-sociais
	padding-right: 10px
	display: flex
	justify-content: space-around

header
	background-color: alpha($colors["inverse"], 0.9)



.arrow
	top 34%
	position absolute
	z-index 2
	cursor: pointer
	
	
@media screen and (max-width: $queries['medium'])
	header
		height: auto
		background-repeat: repeat-x
		padding-top 15px
		.container
			padding-bottom: 15px
		.rede-sociais
			text-align: right

	.logo-leort
		text-align: center


@media screen and (max-width: $queries['small'])
	.rede-sociais-insta
	.rede-sociais-face
		margin: auto
		max-width 30px
		display block

@media screen and (max-width: 478px)
	.rede-sociais
		padding 0 remify(3px)
		flex-wrap: wrap;
		img
			max-width 25px




// slicks dots
.slick-dots
	position: absolute;
	bottom: 10px
	z-index: 2;
.slick-dotted.slick-slider
	margin-bottom: 0

.slick-dots li button:before
	font-size: 12px
	color: $colors['verde-texto']
.slick-dots li.slick-active button:before
	font-size: 12px
	color: $colors['verde-texto']
	opacity 1

	
