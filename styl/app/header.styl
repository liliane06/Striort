header
	height: auto
	padding-top 20px
	position: fixed
	left 0
	top: 0
	width: 100%
	z-index 99
	.container
		padding-bottom: 20px
	.rede-sociais
		text-align: left
	
.logo-striort
	text-align: left 

.logo-container
	padding: 15px 0

.center-vertical
	@extends .flex-center-vertical

footer
	@extend .text-inverse
	p 
		@extend .light


.rede-sociais-face
	padding-right: 10px

header
	background-color: alpha($colors["inverse"], 0.7)

@media screen and (max-width: $queries['medium'])
	header
		height: auto
		background-repeat: repeat-x
		padding-top 15px
		.container
			padding-bottom: 15px
		.rede-sociais
			text-align: right

	.logo-leort
		text-align: center

	.rede-sociais-face
		padding-right: 4px

@media screen and (max-width: $queries['small'])

	.rede-sociais-insta
	.rede-sociais-face
		margin: auto
		max-width 30px
		display block
	.rede-sociais-face
		margin-top: -10px
	
